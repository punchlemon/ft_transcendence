{
  "name": "ft_transcendence-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc -p .",
    "start": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"src/**/*.{ts,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "vitest run --maxWorkers=1 --no-file-parallelism",
    "test:watch": "vitest --maxWorkers=1 --no-file-parallelism",
    "db:reset": "prisma migrate reset --force",
    "db:users": "ts-node scripts/list_users.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.11.1",
    "@fastify/swagger-ui": "^1.10.0",
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.8.1",
    "argon2": "^0.44.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.0",
    "otplib": "^12.0.1",
    "undici": "^6.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fastify-tsconfig": "^3.0.0",
    "prettier": "^3.6.2",
    "prisma": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^1.6.0",
    "ws": "^8.18.3"
  }
}
