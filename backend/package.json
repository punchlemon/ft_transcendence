{
  "name": "ft_transcendence-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc -p .",
    "start": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"src/**/*.{ts,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "vitest run --maxWorkers=1 --no-file-parallelism",
    "test:watch": "vitest --maxWorkers=1 --no-file-parallelism",
    "db:reset": "prisma migrate reset --force",
    "db:users": "tsx scripts/list_users.ts",
    "db:force-logout": "tsx scripts/force_logout.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@fastify/websocket": "^11.0.0",
    "@prisma/client": "^5.8.1",
    "@types/sharp": "^0.31.1",
    "argon2": "^0.44.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "otplib": "^12.0.1",
    "qrcode.react": "^3.2.0",
    "sharp": "^0.34.5",
    "undici": "^6.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fastify-tsconfig": "^3.0.0",
    "prettier": "^3.6.2",
    "prisma": "^5.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^1.6.0",
    "ws": "^8.18.3"
  }
}
